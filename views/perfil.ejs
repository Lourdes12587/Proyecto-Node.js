<%- include('partials/head') %>

  <%- include('partials/header') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" defer></script>
<link rel="stylesheet" href="/resources/css/perfil.css">

<div class="container mt-4">
  <h1>Mi Perfil</h1>
  <div class="card p-3">
    <h3>Bienvenido <%= user.nombre %> <%= user.apellido %></h3>
    <p><strong>Número Dorsal:</strong> <%= user.id %></p>
    <p><strong>Nombre:</strong> <%= user.nombre %></p>
    <p><strong>Apellidos:</strong> <%= user.apellido %></p>
    <p><strong>DNI:</strong> <%= user.dni %></p>
    <p><strong>Teléfono:</strong> <%= user.telefono %></p>
    <p><strong>Calle:</strong> <%= user.calle %></p>
    <p><strong>Número:</strong> <%= user.numero %></p>
    <p><strong>Población:</strong> <%= user.poblacion %></p>
    <p><strong>Código Postal:</strong> <%= user.codigo_postal %></p>

    <a href="/edit/<%=user.id%>" class="btn btn-primary mt-3"><i class="bx bxs-edit"></i>Editar Mi Perfil</a>
  </div>
</div>

<%- include('partials/footer') %>
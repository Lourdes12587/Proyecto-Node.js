<%- include('partials/head') %>

<%- include('partials/header') %>

<link rel="stylesheet" href="/resources/css/perfil.css">

<div class="perfil-wrapper">
  <div class="perfil-card">
    <h1>Mi Perfil</h1>

    <div class="perfil-foto-wrap">
      <% if (user.foto) { %>
        <img src="/uploads/participantes/<%= user.foto %>" alt="Foto de <%= user.nombre %>" class="perfil-foto">
      <% } else { %>
        <div class="perfil-foto-placeholder"><i class="bx bxs-user"></i></div>
      <% } %>
    </div>

    <h3>Bienvenido/a: <%= user.nombre %> <%= user.apellido %></h3>

    <div class="perfil-row"><strong>Número Dorsal:</strong> <span><%= user.id %></span></div>
    <div class="perfil-row"><strong>DNI:</strong> <span><%= user.dni %></span></div>
    <div class="perfil-row"><strong>Teléfono:</strong> <span><%= user.telefono %></span></div>
    <div class="perfil-row"><strong>Dirección:</strong> <span><%= user.calle %> <%= user.numero %></span></div>
    <div class="perfil-row"><strong>Población:</strong> <span><%= user.poblacion %></span></div>
    <div class="perfil-row"><strong>Código Postal:</strong> <span><%= user.codigo_postal %></span></div>

    <a href="/edit/<%= user.id %>" class="btn-edit-profile"><i class="bx bxs-edit"></i> Editar mi perfil</a>
  </div>
</div>

<%- include('partials/footer') %>

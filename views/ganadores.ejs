<%- include('partials/head') %>

<%- include('partials/header') %>

<link rel="stylesheet" href="/resources/css/ganadores.css">

<main class="auth-wrapper">
  <div class="login-container" style="max-width:420px;">
    <h2>Registrar Ganadores</h2>
    <p class="helper small mb-2">Introduce el número de dorsal de los 3 primeros clasificados</p>

    <% if (mensaje) { %>
      <div class="form-alert <%= mensajeTipo === 'success' ? 'success' : '' %>"><%= mensaje %></div>
    <% } %>

    <form action="/ganadores" method="post" class="mt-2">
      <input type="hidden" name="origen" value="admin" />

      <label for="primero">1º Clasificado (dorsal)</label>
      <input type="number" id="primero" name="primero" min="1" required />

      <label for="segundo">2º Clasificado (dorsal)</label>
      <input type="number" id="segundo" name="segundo" min="1" required />

      <label for="tercero">3º Clasificado (dorsal)</label>
      <input type="number" id="tercero" name="tercero" min="1" required />

      <div class="form-actions">
        <button type="submit" class="cta-btn">GUARDAR <i class="bx bx-check-circle" style="margin-left:8px"></i></button>
        <a href="/admin" class="btn-neutral">Cancelar</a>
      </div>
    </form>
  </div>
</main>

<%- include('partials/footer') %>
